#!/usr/bin/env zsh

DIR="$( cd "$( dirname "${(%):-%x}" )" && pwd )"

# Homebrew
which -s brew
if [[ $? != 0 ]] ; then
  yes | /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
  brew update
fi

# Other libs
brew install asciinema
brew install bat
brew tap clementtsang/bottom
brew install bottom
brew install exa # ls replacement
brew install fd # find replacement
brew install fpp
brew install fzf
# To install useful key bindings and fuzzy completion:
$(brew --prefix)/opt/fzf/install
brew install git # override xcode default
brew install git-extras
brew install gnu-sed --with-default-names # installs bin/sed instead of bin/gsed
brew install gnupg
brew install jq
brew install pandoc
brew install proselint
brew install ripgrep # grep / ag replacement
brew install source-highlight
brew install tig
brew install tldr
brew install tmux
brew install typespeed
brew install yarn
brew install starship
brew install zoxide # modern, faster rupa/z, fasd, etc.

# asdf
brew install asdf
asdf plugin add ruby
asdf install ruby latest
asdf global ruby latest
asdf plugin add nodejs
asdf install nodejs latest
asdf global nodejs latest

# ruby
gem install pry
gem install solargraph # ruby language server
gem install solargraph-rails --pre

# python
pip3 install --user --upgrade pynvim

# node
npm install -g npx

# nerd fonts
brew tap homebrew/cask-fonts
brew install --cask font-fira-code-nerd-font font-jetbrains-mono-nerd-font

# neovim
brew install --HEAD neovim
# vim plug for neovim
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
gem install neovim
gem install neovim-ruby-host
npm install -g neovim

# kitty
curl -L https://sw.kovidgoyal.net/kitty/installer.sh | sh /dev/stdin

# run regular bootstrap script
bin/bootstrap
