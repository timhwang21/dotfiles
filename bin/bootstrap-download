#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Homebrew
which -s brew
if [[ $? != 0 ]] ; then
  yes | /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
else
  brew update
fi
# Modern bash
brew install bash # macOS default is bash@3
sudo bash -c 'echo /usr/local/bin/bash >> /etc/shells' # whitelist new bash
chsh -s /usr/local/bin/bash
# Other libs
brew install asciinema
brew install asdf
brew install bash-completion@2
brew install bat
brew tap clementtsang/bottom
brew install bottom
brew install elixir
brew install exa # ls replacement
brew install fasd
brew install fd # find replacement
brew install fpp
brew install fzf
# To install useful key bindings and fuzzy completion:
$(brew --prefix)/opt/fzf/install
brew install git # override xcode default
brew install git-extras
brew install gnu-sed --with-default-names # installs bin/sed instead of bin/gsed
brew install gnupg
brew install haskell-stack
brew install hub
brew install jq
brew install navi # cheat sheets
brew install --HEAD neovim
brew install pandoc
brew install pgcli
brew install postgresql
brew install proselint
brew install python # python 3
brew install ripgrep # grep / ag replacement
ln -s /usr/local/bin/python3 /usr/local/bin/python # allow us to type python instead of python3
brew install source-highlight
brew install task
brew install tig
brew install translate-shell
brew install tree
brew install tmux
brew install typespeed
brew install vim # override system default
brew install yarn

# gems
gem install neovim
gem install neovim-ruby-host
gem install pry
gem install solargraph # ruby language server
gem install solargraph-rails --pre

# python
python -m pip install --user --upgrade pynvim

# NPM
npm install -g neovim
npm install -g npx

# powerline-shell
git clone https://github.com/b-ryan/powerline-shell
cd powerline-shell
sudo python setup.py install
cd ..
sudo rm -rf powerline-shell

# powerline fonts
brew tap homebrew/cask-fonts
brew install --cask font-fira-code-nerd-font font-jetbrains-mono-nerd-font

# vim plug for neovim
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# kitty
curl -L https://sw.kovidgoyal.net/kitty/installer.sh | sh /dev/stdin

# run regular bootstrap script
bin/bootstrap
