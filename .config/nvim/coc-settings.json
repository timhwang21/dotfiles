// Lifted from https://github.com/taigacute/ThinkVim/blob/master/coc-settings.json
{
  "suggest.timeout": 500,
  "suggest.snippetIndicator": "üåü",
  //"suggest.triggerCompletionWait": 100,
  "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u2A15",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\u2663",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf530",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf6a6",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  //diagnostic
  "diagnostic.hintSign": " ‚Ä¢",
  "diagnostic.errorSign": " ‚Ä¢",
  "diagnostic.warningSign": " ‚Ä¢",
  "diagnostic.infoSign": " ‚Ä¢",
  "diagnostic.virtualText": true,
  "diagnostic.maxWindowHeight": 50,
  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "markdown": [
      "proselint",
      "markdownlint"
    ],
    "text": [
      "proselint"
    ]
  },
  "diagnostic-languageserver.linters": {
    "proselint": {
      "command": "proselint",
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "proselint",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):(\\s)(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        " ": "info"
      }
    }
  },
  //git
  "git.branchCharacter": "\uf408",
  "git.virtualTextPrefix": "    ‚ùØ‚ùØ‚ùØ ",
  "git.changedSign.text": "‚ñç~", // U+258x D
  "git.addedSign.text": "‚ñç+",
  "git.removedSign.text": "‚ñç-",
  "git.topRemovedSign.text": "‚ñî‚ñî", // U+259x 4
  "git.changeRemovedSign.text": "‚ñç‚âÉ",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterDelete",
  //Snippet
  "coc.preferences.snippetStatusText": "‚ìà ",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "haskell",
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "json",
    "markdown",
    "ruby",
    "typescript",
    "typescript.tsx",
    "typescriptreact"
  ],
  //prettier
  "prettier.statusItemText": "‚ìü ",
  "prettier.stylelintIntegration": true,
  "prettier.onlyUseLocalVersion": true,
  //eslint
  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "typescript",
    "typescript.tsx",
    "typescriptreact"
  ],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "solargraph.formatting": true,
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
