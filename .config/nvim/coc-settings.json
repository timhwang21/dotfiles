// Lifted from https://github.com/taigacute/ThinkVim/blob/master/coc-settings.json
{
  //coc-explorer
  "explorer.keyMappings.global": {
    "<C-U>": "normal:18k",
    "<C-D>": "normal:18j",
    "<cr>": [
      "expandable?",
      [
        "expanded?",
        "collapse",
        "expand"
      ],
      "open"
    ],
    "m": "rename", // alias -- "move"
    "o": [
      "expandable?",
      [
        "expanded?",
        "collapse",
        "expand"
      ],
      "open"
    ],
    "O": [
      "expandable?",
      [
        "expanded?",
        "collapse",
        "expand"
      ],
      "systemExecute"
    ],
    // Flip these -- more intuitive
    ">>": "gitStage",
    "ga": "gitStage", // git add
    "<<": "gitUnstage"
  },
  "explorer.filename.colored.enable": {
    "git": true,
    "diagnosticError": true,
    "diagnosticWarning": false
  },
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableNerdfont": true, // Devicons have incorrect color
  "explorer.icon.expanded": "\uf47c", // v to oct-chevron_down
  "explorer.icon.collapsed": "\uf460", // > to oct-chevron_right
  "explorer.file.showHiddenFiles": true, // . to toggle hidden
  // rootStatus icons should have trailing space for proper sizing
  "explorer.git.icon.rootStatus.untracked": "\uf196 ", // ? -> fa-plus_square_o
  "explorer.git.icon.status.untracked": "\uf196", // ? -> fa-plus_square_o
  "explorer.git.icon.rootStatus.modified": "\uf044 ", // ~ -> fa-pencil_square_o
  "explorer.git.icon.status.modified": "\uf044", // ~ -> fa-pencil_square_o
  "explorer.git.icon.rootStatus.added": "\uf046 ", // + -> fa-check_square_o
  "explorer.git.icon.status.added": "\uf046", // + -> fa-check_square_o
  "explorer.git.icon.rootStatus.renamed": "\uf045 ", // ‚Üí -> fa-share_square_o
  "explorer.git.icon.status.renamed": "\uf045", // ‚Üí -> fa-share_square_o
  "explorer.git.icon.rootStatus.deleted": "\uf147 ", // ‚úó -> fa-minus_square_o
  "explorer.git.icon.status.deleted": "\uf147", // ‚úó -> fa-minus_square_o
  "explorer.git.icon.rootStatus.stashed": "\uf56e ", // $ -> mdi-backup_restore
  "explorer.git.icon.rootStatus.ahead": "\uf55d ", // ‚á° -> mdi-arrow_up_thick
  "explorer.git.icon.rootStatus.behind": "\uf545 ", // ‚á£ -> mdi-arrow_down_thick
  "explorer.git.icon.rootStatus.conflicted": "\uf47f ", // = -> oct-git_compare
  "explorer.git.icon.status.mixed": "\uf695", // * -> mfa-contrast_box
  "explorer.git.icon.status.copied": "\uf0c5", // C -> fa-files_o
  "explorer.git.icon.status.unmerged": "\uf407", // ‚úó -> oct-git_pull_request
  "explorer.git.icon.status.ignored": " ", // ! -> whitespace
  "suggest.timeout": 1000,
  "suggest.snippetIndicator": "üåü",
  //"suggest.triggerCompletionWait": 100,
  "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u2A15",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\u2663",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf530",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf6a6",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  //diagnostic
  "diagnostic.hintSign": "‚Äâ‚Ä¢", // U+2009 instead of regular whitespace to avoid breaking gutter
  "diagnostic.errorSign": "‚Äâ‚Ä¢",
  "diagnostic.warningSign": "‚Äâ‚Ä¢",
  "diagnostic.infoSign": "‚Äâ‚Ä¢",
  "diagnostic.maxWindowHeight": 50,
  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "gitcommit": [
      "proselint"
    ],
    "markdown": [
      "proselint",
      "markdownlint"
    ],
    "text": [
      "proselint"
    ]
  },
  "diagnostic-languageserver.linters": {
    "proselint": {
      "command": "proselint",
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "proselint",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):(\\s)(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        " ": "info"
      }
    }
  },
  //git
  "git.branchCharacter": "\uf408",
  "git.addGBlameToVirtualText": true,
  "git.virtualTextPrefix": "    ‚ùØ‚ùØ‚ùØ ",
  "git.changedSign.text": "‚ñç~", // U+258x D
  "git.addedSign.text": "‚ñç+",
  "git.removedSign.text": "‚ñç-",
  "git.topRemovedSign.text": "‚ñî‚ñî", // U+259x 4
  "git.changeRemovedSign.text": "‚ñç‚âÉ",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterDelete",
  //Snippet
  "coc.preferences.snippetStatusText": "‚ìà ",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "haskell",
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "json",
    "markdown",
    "ruby",
    "typescript",
    "typescript.tsx",
    "typescriptreact"
  ],
  //prettier
  "prettier.statusItemText": "‚ìü ",
  "prettier.stylelintIntegration": true,
  "prettier.onlyUseLocalVersion": true,
  //eslint
  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "typescript",
    "typescript.tsx",
    "typescriptreact"
  ],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "solargraph.formatting": true,
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
