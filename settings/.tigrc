# find path with brew info git
set diff-highlight = /opt/homebrew/Cellar/git/2.37.0/share/git-core/contrib/diff-highlight/diff-highlight
set line-graphics = utf-8
set main-view-date = custom
set main-view-id = yes

# Interactive rebase
bind main B !?git rebase -i %(commit)
# Revert
bind main ! !?git revert %(commit)
# Copy SHA
bind generic 9 +sh -c "git show -s --format=%h %(commit) | pbcopy && echo Copied %(commit) to clipboard"
